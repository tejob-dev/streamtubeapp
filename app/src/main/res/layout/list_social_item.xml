<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@color/red_500">

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:id="@+id/btn_wha"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/sh_what"
                android:scaleType="fitXY"
                />
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:id="@+id/btn_telegr"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/sh_telegr"
                android:scaleType="fitXY"
                />
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:id="@+id/btn_instag"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/sh_insta"
                android:scaleType="fitXY"
                />
        </LinearLayout>

        <LinearLayout
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:id="@+id/btn_faceb"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/sh_faceb"
                android:scaleType="fitXY"
                />
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:id="@+id/btn_skyp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/sh_skype"
                android:scaleType="fitXY"
                />
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:id="@+id/btn_twi"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/sh_twiter"
                android:scaleType="fitXY"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout
        >