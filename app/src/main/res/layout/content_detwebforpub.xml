<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <WebView
        android:visibility="invisible"
        android:alpha="0.0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webviewin"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        />

    <RelativeLayout
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/childLayoutin">


        <LinearLayout
            android:background="@drawable/round_shi"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:id="@+id/mainLinearLayoutin">

                <Button
                    android:background="@drawable/round_shi"
                    android:textColor="#000000"
                    android:text="X"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:padding="0dp"
                    android:paddingTop="0dp"
                    android:id="@+id/mainCloseButtonin"/>
                <TextView
                    android:background="@drawable/round_shi"
                    android:textColor="#000000"
                    android:id="@+id/mainTitleTextin"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="26dp"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_webbarin"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_height="4dp"
                android:max="100"
                android:progress="5"
                android:progressTint="@color/red_500"
                android:indeterminate="false"/>

            <LinearLayout
                android:id="@+id/webview_receivein"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/redirectAdsin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="40dp"/>

    </RelativeLayout>

</RelativeLayout>