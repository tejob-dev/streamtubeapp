<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style pour le FloatingActionButton avec l'icône en blanc -->
    <style name="CustomFABStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <!-- Couleur de fond du bouton (facultatif) -->
        <item name="backgroundTint">@color/white</item>
        <!-- Couleur de l'icône -->
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textSize">13sp</item> <!-- Adjust the text size as needed -->
        <item name="android:titleTextStyle">@style/MyTitleTextStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButton</item>
    </style>

    <style name="MyTitleTextStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">35sp</item>
    </style>

    <style name="DialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#000000</item> <!-- Set color to black -->
    </style>

</resources>